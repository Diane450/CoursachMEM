@model coursach.ViewModels.EmployeeDataViewModel

@{
    ViewData["Title"] = "Редактирование";
    ViewData["Centered"] = true;
}
<h4 class="text-center text-primary">Редактировать данные о пользователе</h4>
<div class="d-flex justify-content-center">
    <div class="form-container p-4 shadow rounded" style="background-color: #f8f9fa; max-width: 800px; width: 100%;">
        <form asp-action="Edit" class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="FullName" class="form-label"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Phone" class="form-label"></label>
                    <input asp-for="Phone" id="phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="RoleId" class="form-label"></label>
                    <select asp-for="RoleId" asp-items="ViewBag.RoleName" class="form-control"></select>
                    <span asp-validation-for="RoleId" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-center mt-4">
                <input type="submit" value="Применить изменения" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    h4.text-center {
        font-weight: bold;
    }

    .form-label {
        font-weight: bold;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .alert {
        margin-top: 1rem;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
    }

    .shadow {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-container {
        max-width: 800px;
        width: 100%;
    }
</style>
