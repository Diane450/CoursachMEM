@model coursach.ViewModels.AuthorizationViewModel

@{
    ViewData["Title"] = "Вход";
    ViewData["Centered"] = true;
}

<h4 class="mb-4 text-center text-primary">Авторизация</h4>
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger" role="alert" id="errorMessage">
                @TempData["Error"]
            </div>
        }
        <form asp-action="Auth" class="p-4 shadow rounded" style="background-color: #f8f9fa;">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="form-group mb-3">
                <label asp-for="Login" class="form-label text-primary"></label>
                <input asp-for="Login" class="form-control border-primary" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label text-primary"></label>
                <input asp-for="Password" type="password" id="newUserPassword" class="form-control border-primary" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="show-password" onclick="show_hide_password()">
                <label class="form-check-label text-primary" for="show-password">
                    Показать/скрыть пароль
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Войти" class="btn btn-primary w-100" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function show_hide_password() {
            var passwordField = document.getElementById("newUserPassword");
            if (passwordField.type === "password") {
                passwordField.type = "text";
            } else {
                passwordField.type = "password";
            }
        }
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    h4.text-primary {
        font-weight: bold;
    }

    .form-label {
        font-weight: bold;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .alert {
        margin-top: 1rem;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
    }

    .shadow {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>
