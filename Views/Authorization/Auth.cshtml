@model coursach.ViewModels.AuthorizationViewModel

@{
    ViewData["Title"] = "Auth";
}
<h4>Авторизация</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (TempData["Error"] != null)
        {
            <p class="text-danger" id="errorMessage">@TempData["Error"]</p>
        }
        <form asp-action="Auth">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" id="newUserPassword" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <input type="checkbox" class="show" id="show-password" onclick="show_hide_password()">
            <label for="show-password">
                Показать/скрыть пароль
            </label>
            <div class="form-group">
                <input type="submit" value="Войти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
